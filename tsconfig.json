{
  "compilerOptions": { 
    "allowJs": false,
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "declaration": true,
    "isolatedModules": true,
    "noEmit": true,
    "module": "CommonJS",
    "target": "ES2023",
    "moduleResolution": "Node",
    "declarationDir": "./dist",
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.js"]
}